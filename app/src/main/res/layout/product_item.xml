<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:minHeight="25dp"
    android:minWidth="25dp">


    <ImageView
        android:layout_width="0dp"
        android:layout_height="125dp"
        android:id="@+id/resultPreviewImageView"
        android:layout_gravity="top|center_vertical"
        android:layout_weight="3"
        android:clickable="false"
        android:scaleType="fitStart"
        android:src="@drawable/placeholder"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="125dp"
        android:layout_weight="7"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:id="@+id/itemNameTextView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/colorText"
            android:singleLine="true"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam hendrerit urna enim, quis imperdiet dolor rhoncus tempor. Nunc quis mi fermentum, mattis orci nec, ultrices risus."
            android:id="@+id/descriptionTextView"
            android:layout_below="@+id/itemNameTextView"
            android:layout_alignParentStart="true"
            android:layout_marginTop="6dp"
            android:layout_marginRight="5dp"
            android:maxLines="2"
            android:textColor="@color/colorText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPC-A:"
            android:id="@+id/textView7"
            android:layout_below="@+id/descriptionTextView"
            android:layout_alignParentStart="true"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EAN-13:"
            android:id="@+id/textView8"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456789012"
            android:id="@+id/upcTextView"
            android:layout_alignTop="@+id/textView7"
            android:layout_toEndOf="@+id/textView8"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234567890123"
            android:id="@+id/eanTextView"
            android:layout_alignTop="@+id/textView8"
            android:layout_toEndOf="@+id/textView8"
            android:textSize="16sp"
            android:textColor="@color/colorText"
            android:layout_marginLeft="5dp" />
    </RelativeLayout>
</LinearLayout>
